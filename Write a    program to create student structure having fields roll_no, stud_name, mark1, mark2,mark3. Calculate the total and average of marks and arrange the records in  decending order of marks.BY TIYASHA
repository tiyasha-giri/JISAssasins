roll_no = int(input("Enter the student roll_no:"))
stud_name = input("Enter the stud_name:")
marklist = []
total_marks=0
mark1 = int(input("Enter the 1st mark:"))
marklist.append(mark1)
mark2 = int(input("Enter the 2nd mark:"))
marklist.append(mark2)
mark3 = int(input("Enter the 3rd mark:"))
marklist.append(mark3)
print("The marklist is =",marklist)
marklist.sort(reverse = True)
print("After sorting the marks are =",marklist)
total_marks = mark1+mark2+mark3
print("The total_marks is =",total_marks)
avg_marks=(total_marks)/3
print("The avg(total_marks) is =",avg_marks)
